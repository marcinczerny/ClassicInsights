---
import "../styles/global.css";
import { ToastProvider } from "../components/ToastProvider";
import { TopNavigationBar } from "../components/layout/TopNavigationBar";

interface Props {
  title?: string;
}

const { title = "ClassicInsights" } = Astro.props;

// Mock user for layout demonstration
// TODO: Replace with actual auth implementation
// Set to null to test unauthenticated state, or provide mock data for authenticated state
const user = {
  id: "mock-user-id",
  email: "user@example.com"
};

// For unauthenticated state testing, uncomment:
// const user = null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TopNavigationBar user={user} client:load />
    <slot />
    <ToastProvider client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
